<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hsh.mplab.smntestclient.MainActivity">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darksteelblue"
        android:textSize="12dp"
        android:textColor="@color/whitesmoke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etIpAdr"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:backgroundTint="@color/darksteelblue"
            android:onClick="etIpAdr_Click" />

        <Button
            android:id="@+id/butIpAdr"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textColor="@color/gray"
            android:text="OK"
            android:onClick="butIpAdr_Click" />

    </LinearLayout>

    <Button
        android:id="@+id/butSmnClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:text="@string/smnConnect"
        android:onClick="butSmnClient_Click"/>

</LinearLayout>
