<resources>
    <declare-styleable name="LabSpinner">
        <!-- Parameters for the label -->
        <attr name="LabText" format="string" />
        <attr name="LabColor" format="color" />
        <attr name="LabSize" format="dimension" />

        <!-- Parameters for the spinner display -->
        <attr name="LabSpinPos" format="dimension" />
        <attr name="SpinBgColor" format="color" />
        <attr name="SpinTextGravity">
            <flag name="bottom" value="80" />
            <flag name="center" value="17" />
            <flag name="center_horizontal" value="1" />
            <flag name="center_vertical" value="16" />
            <flag name="clip_horizontal" value="8" />
            <flag name="clip_vertical" value="128" />
            <flag name="end" value="8388613" />
            <flag name="fill" value="119" />
            <flag name="fill_horizontal" value="7" />
            <flag name="fill_vertical" value="112" />
            <flag name="left" value="3" />
            <flag name="right" value="5" />
            <flag name="start" value="8388611" />
            <flag name="top" value="48" />
        </attr>
        <attr name="SpinTextPadding" format="dimension" />
        <attr name="SpinTextSize" format="dimension" />

        <!-- Parameters for the spinner items -->
        <attr name="ItemBgColor" format="color" />
        <attr name="ItemTextGravity">
            <flag name="bottom" value="80" />
            <flag name="center" value="17" />
            <flag name="center_horizontal" value="1" />
            <flag name="center_vertical" value="16" />
            <flag name="clip_horizontal" value="8" />
            <flag name="clip_vertical" value="128" />
            <flag name="end" value="8388613" />
            <flag name="fill" value="119" />
            <flag name="fill_horizontal" value="7" />
            <flag name="fill_vertical" value="112" />
            <flag name="left" value="3" />
            <flag name="right" value="5" />
            <flag name="start" value="8388611" />
            <flag name="top" value="48" />
        </attr>
        <attr name="ItemTextPadding" format="dimension" />
        <attr name="ItemTextSize" format="dimension" />

        <attr name="LabSpinStatColors" format="reference" />
        <attr name="LabSpinStatValues" format="reference" />
        <attr name="LabSpinStatStrings" format="reference" />

        <attr name="LabSpinIdxDefault" format="integer" />
        <attr name="LabSpinIdxOk" format="integer" />
        <attr name="LabSpinIdxTimeOut" format="integer" />
        <attr name="LabSpinIdxError" format="integer" />

        <attr name="exampleDrawable" format="color|reference" />
    </declare-styleable>

    <integer name="InfoStatIdxDefault">0</integer>
    <integer name="InfoStatIdxOk">1</integer>
    <integer name="InfoStatIdxTimeOut">2</integer>
    <integer name="InfoStatIdxError">0</integer>

    <array name="LabSpinStatColorArray">
        <item>@color/cfgInfoStatDefault</item>
        <item>@color/cfgInfoStatOk</item>
        <item>@color/cfgInfoStatTimeOut</item>
        <item>@color/cfgInfoStatError</item>
    </array>

    <array name="LabSpinStatValueArray">
        <item>100</item>
        <item>200</item>
        <item>300</item>
        <item>400</item>
    </array>

    <array name="LabSpinStatStringArray">
        <item>@string/devStatDefault</item>
        <item>@string/devStatOk</item>
        <item>@string/devStatTimeOut</item>
        <item>@string/devStatError</item>
    </array>

</resources>